<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF" >

    <Button
        android:id="@+id/button_qr_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="Download Map" />

    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_qr_code"
        android:layout_centerHorizontal="true"
        android:text="Start" />

    <Button
        android:id="@+id/button_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_qr_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Choose Map" />

    <Button
        android:id="@+id/button_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_gallery"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Exit" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/button_start"
        android:layout_alignLeft="@+id/button_qr_code"
        android:layout_marginBottom="26dp"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>